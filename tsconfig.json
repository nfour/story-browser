{
  "compilerOptions": {
    "strict": true,
    "target": "ES2019",
    "module": "ES2020",
    "outDir": "./x",
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./*.ts",
    "./*.tsx",
    "*.js",
    ".*.js",
    "src",
    "testProject"
  ]
}